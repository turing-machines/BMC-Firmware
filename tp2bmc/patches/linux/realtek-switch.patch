+	int ret;
+
+	/* Writes, on the other hand, are no different in 'rtk' mode. */
+	ret = i2c_master_send(i2c, data, count);
+	if (ret == count)
+		return 0;
+	else if (ret < 0)
+		return ret;
+	else
+		return -EIO;
+}
