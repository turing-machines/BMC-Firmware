comment "ftdidmx needs a toolchain w/ gcc >= 4.9"
	depends on !BR2_TOOLCHAIN_GCC_AT_LEAST_4_9

config BR2_PACKAGE_OLA_PLUGIN_GPIO
	bool "GPIO"
